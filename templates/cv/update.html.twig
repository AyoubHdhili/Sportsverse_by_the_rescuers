{% extends 'front.html.twig' %}

{% block title %}Update cv
{% endblock %}

{% block banner_content %}

	<div class="col-lg-6" style="margin-top: 160px; justify-content: center; align-items: center;">

		<div class="card">
			<div class="card-body">
				<h5 class="card-title">Remplir votre CV</h5>

				{{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
				<label for="input-text" class="col-sm-4 col-form-label">Activites</label>
				<div class="col-sm-10">
					{{form_widget(form.activites,{'attr' :{'class' : 'form-control'},})}}
					{{form_errors(form.activites)}}
				</div><br><br>

				<label for="input-text" class="col-sm-4 col-form-label">Certification</label>
				<div class="col-sm-10">
					{{form_widget(form.certification,{
								'attr' :{
									'class' : 'form-control'
								},
							})}}
					{{form_errors(form.certification,{
						'attr' :{'class' : 'text-danger'},})}}
				</div>

				<label for="input-text" class="col-sm-4 col-form-label">Description</label>
				<div class="col-sm-10">
					{{form_widget(form.description,{
								'attr' :{
									'class' : 'form-control'
								},
							})}}
					{{form_errors(form.description,{
						'attr' :{'class' : 'text-danger'},})}}
				</div>

				<label for="input-text" class="col-sm-4 col-form-label">Tarif par heure</label>
				<div class="col-sm-10">
					{{form_widget(form.tarif,{
								'attr' :{
									'class' : 'form-control'
								},
							})}}
					{{form_errors(form.tarif,{
						'attr' :{'class' : 'text-danger'},})}}
				</div>

				<label for="input-text" class="col-sm-4 col-form-label">Photo de profile</label>
				<div class="col-sm-10">
					{{form_widget(form.image,{
								'attr' :{
									'class' : 'form-control'
								},
							})}}
					{{form_errors(form.image,{
						'attr' :{'class' : 'text-danger'},})}}
				</div>
				<label for="input-text" class="col-sm-5 col-form-label">Duree d'experience</label>
				<div class="col-sm-10">
					{{form_widget(form.duree_experience,{
								'attr' :{
									'class' : 'form-control'
								},
							})}}
					{{form_errors(form.duree_experience,{
						'attr' :{'class' : 'text-danger'},})}}
				</div>

				<label for="input-text" class="col-sm-5 col-form-label">Niveau d'experience</label>
				<div class="col-sm-10">
					{{form_widget(form.level,{
								'attr' :{
									'class' : 'form-radio'
								},
							})}}
					{{form_errors(form.level,{
						'attr' :{'class' : 'text-danger'},})}}
				</div>
				<label for="input-text" class="col-sm-5 col-form-label">User</label>
				<div class="col-sm-10">
					{{form_widget(form.user_id,{
								'attr' :{
									'class' : 'form-choice'
								},
							})}}
					{{form_errors(form.user_id,{
						'attr' :{'class' : 'text-danger'},})}}
				</div>

				<div class="text-center">
					<br>
					{{ form_widget(form) }}
					<button type="submit" class="btn btn-primary">
						{{ button_label|default('Modifier') }}
					</button>
				</div>
				{{form_end(form)}}
			</div>
			<!-- Vertical Form -->

		</div>
	</div>
{% endblock %}
{% block body %}{% endblock %}
